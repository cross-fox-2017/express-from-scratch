<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title><%= title %></title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  </head>
  <body>
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <h1 align="center">.:User List:.</h1>
          <table class="table table-bordered">
            <tr>
              <th>ID</th>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Phone</th>
              <th>Created At</th>
              <th>Updated At</th>
              <th>Action</th>
            </tr>
            <% result.forEach(function(val){ %>
            <tr>
              <td><%= val.id %></td>
              <td><%= val.firstname %></td>
              <td><%= val.lastname %></td>
              <td><%= val.phone %></td>
              <td><%= val.createdAt %></td>
              <td><%= val.updatedAt %></td>
              <td>
                <a href="update/<%=val.id %>"> Update </a> | <a href="delete/<%=val.id %>"> Delete </a>
              </td>
            </tr>
            <% }) %>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-md-8">
          <h3>Add User</h3>
          <form class="form-horizontal" action="/create" method="post">
            <div class="form-group">
              <label class="col-sm-2 control-label">First Name</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" name="firstname" placeholder="Yoma">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Last Name</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" name="lastname" placeholder="Sofwan">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">Phone</label>
              <div class="col-sm-8">
                <input type="text" class="form-control" name="phone" placeholder="089694026XXX">
              </div>
            </div>
            <div class="form-group">
              <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>

  </body>
</html>
